<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/main_view" >


    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="33dp"
        android:background="@drawable/card_background"
        android:elevation="10dp"
        android:gravity="center"
        android:text="@string/question"
        android:textColor="@android:color/white"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/flashcard_question"
        android:background="@drawable/card_background"
        android:elevation="10dp"
        android:gravity="center"
        android:text="@string/correct_answer"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/correct_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="67dp"
        android:background="@color/orange"
        android:gravity="center"
        android:text="@string/correct_answer"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/wrong_answer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="201dp"
        android:background="@color/orange"
        android:gravity="center"
        android:text="@string/wrong_answer1"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/wrong_answer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="133dp"
        android:background="@color/orange"
        android:gravity="center"
        android:text="@string/wrong_answer2"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/edit_card"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/edit_icon_foreground" />

    <ImageView
        android:id="@+id/toogle_choices_visibility"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/hide_icon" />

    <ImageView
        android:id="@+id/add_card"
        android:layout_width="50dp"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="36dp"
        android:src="@drawable/add_icon" />

</RelativeLayout>